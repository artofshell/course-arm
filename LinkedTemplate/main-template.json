{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      
  },
  "variables": {
      "GitHub": "https://raw.githubusercontent.com/",
      "Organization": "artofshell",
      "Repository": "course-arm"
  },
  "resources": [
      {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "2015-01-01",
          "name": "Storage",
          "properties": {
              "mode": "Incremental",
              /* https://raw.githubusercontent.com/artofshell/course-arm/master/LinkedTemplate/main-template.json */
              "templateLink": {
                  "uri": "[concat(variables('GitHub'), variables('Organization'), '/', variables('Repository'), '/master/LinkedTemplate/child-storage.json')]"
              }
          }
      }
  ]
}